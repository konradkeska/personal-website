---
import { Image } from "astro:assets";

import PageLayout from "@/layouts/Base";
import bikeImg from "@/assets/bike.jpg";
import catImg from "@/assets/me_cat.jpg";

const meta = {
	title: "Uses",
	description: "What I use on daily basis",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">Uses</h1>
		<p>Curated list of things that I use on daily basis.</p>
		<div class="flex justify-center">
			<Image
				class="h-auto w-full rounded-lg shadow-sm"
				src={catImg}
				alt="Konrad and his cat Edward sitting on a chair"
				loading="eager"
				fetchpriority="high"
			/>
		</div>
		<p>Desk</p>
		<ul class="list-inside list-disc">
			<li>Edward - The Black Cat</li>
			<li>2x DELL u2720q monitor</li>
			<li>Electric desk with a solid oak top</li>
			<li>Herman Miller Aeron</li>
			<li>Apple MacBook Pro 16' M1 32GB RAM</li>
			<li>Apple AirPods Pro</li>
			<li>Keychron K6</li>
			<li>Logitech MX Master 3s</li>
		</ul>
		<Image
			class="h-auto w-full rounded-lg shadow-sm"
			src={bikeImg}
			alt="Author bike"
			loading="eager"
			aria-hidden="true"
		/>
		<p>Cycling</p>
		<ul class="list-inside list-disc">
			<li>Scott Addict RC30</li>
			<li>Giro Helios Spherical MIPS</li>
			<li>MAAP, Pedal Mafia cycling kits</li>
			<li>Tacx Neo 2T</li>
		</ul>
	</div>
</PageLayout>
